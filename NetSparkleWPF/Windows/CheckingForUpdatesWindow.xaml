<Window x:Class="NetSparkleWPF.Windows.CheckingForUpdatesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetSparkleWPF.Windows"
        mc:Ignorable="d"
        Title="Software Update" SizeToContent="WidthAndHeight" MinWidth="300" Icon="{Binding Icon}" WindowStyle="none" WindowStartupLocation="CenterOwner" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Image Source="{Binding Icon}" Margin="8" Width="48" Height="48" />
            <TextBlock Grid.Row="0" Text="Checking for updates..." FontWeight="Bold" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="8"/>
        </StackPanel>        
        <ProgressBar Grid.Row="1" Height="20" Margin="4" IsIndeterminate="True"/>
        <Button Grid.Row="2" Grid.Column="1" Content="Cancel" Margin="8" Padding="4" Width="100" Command="{Binding CancelCommand}" Click="Button_Click"/>
    </Grid>
</Window>
